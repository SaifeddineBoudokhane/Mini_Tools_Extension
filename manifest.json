{
    "manifest_version": 3,
    "name": "Mini Tools Extension",
    "version": "1.0.0",
    "description": "A Chrome extension that has simple usefull tools like generating QR codes and more.",
    "author": "Saifeddine Boudokhane",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "index.html",
        "default_width": 1000,
        "default_height": 500,
        "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
        }
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}